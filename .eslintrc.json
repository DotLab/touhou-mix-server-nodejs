{
  "extends": ["eslint:recommended", "google"],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 9
  },
  "plugins": [
    "sort-requires"
  ],
  "rules": {
    "sort-requires/sort-requires": 2,
    "sort-imports": ["error", {
      "ignoreCase": false,
      "ignoreDeclarationSort": false,
      "ignoreMemberSort": false,
      "memberSyntaxSortOrder": ["none", "all", "multiple", "single"]
    }],
    "no-multiple-empty-lines": ["error", {"max": 1}],
    "linebreak-style": "off",
    "require-jsdoc": "off",
    "max-len": "off"
  }
}
